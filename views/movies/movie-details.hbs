<h2>Movie Index</h2>



<h3>{{movieDetails.title}}</h3>
<h4>{{movieDetails.genre}}</h4>
<h4>{{movieDetails.plot}}</h4>

{{#each movieDetails.cast}}
<h6>{{name}}</h6>
<h6>{{occupation}}</h6>
<h6>{{catchPhrase}}</h6>
{{/each}}

<a href="/movies/{{_id}}/edit">Edit</a>

<form action="/movies/{{_id}}/delete" method="post">
    <button value="delete">DELETE!</button>
</form>

<a href="/">Home</a>